<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mid.mapper.roommateMapper">
	<select id="selectedCountry" resultType="String" parameterType="String">
		SELECT Name FROM city WHERE CountryCode = (SELECT Code FROM country WHERE Name = #{selectedCountry});
	</select>

	<select id="getRoommateList" resultType="com.mid.VO.roommateVO" parameterType="String">
		SELECT * FROM roommateboard
	</select>
	
<!--  세부사항 출력할 떄 쓸것
SELECT ri.num, mentiNum, country, city, boardTitle, boardContent, postDate, roommateNum, files FROM roommatementi ri LEFT OUTER JOIN mentiroommateattach ia ON ri.num = ia.roommateNum
	UNION ALL SELECT ro.num, mentorNum, country, city, boardTitle, boardContent, postDate, roommateNum, files FROM roommatementor ro LEFT OUTER JOIN mentorroommateattach oa ON ro.num = oa.roommateNum;
    -->
    
</mapper>



